{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean target directory",
			"type": "shell",
			"command": "cargo",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build for debugging",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"group": "build"
		},
		{
			"label": "build all release targets",
			"type": "shell",
			"command": "cargo",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$rustc"
			],
			"dependsOn": [
				"build cross(release): aarch64-pc-windows-gnullvm",
				"build cross(release): x86_64-pc-windows-gnu",
				"build cross(release): x86_64-apple-darwin",
				"build cross(release): aarch64-apple-darwin",
				"build cross(release): aarch64-unknown-linux-gnu",
				"build native(release): docker runtime native"
			]
		},
		{
			"label": "build cross(release): aarch64-pc-windows-gnullvm",
			"type": "shell",
			"command": "cargo",
			"args": [
				"zigbuild",
				"--release",
				"--target",
				"aarch64-pc-windows-gnullvm"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "build cross(release): x86_64-pc-windows-gnu",
			"type": "shell",
			"command": "cargo",
			"args": [
				"zigbuild",
				"--release",
				"--target",
				"x86_64-pc-windows-gnu"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "build cross(release): x86_64-apple-darwin",
			"type": "shell",
			"command": "cargo",
			"args": [
				"zigbuild",
				"--release",
				"--target",
				"x86_64-apple-darwin"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "build cross(release): aarch64-apple-darwin",
			"type": "shell",
			"command": "cargo",
			"args": [
				"zigbuild",
				"--release",
				"--target",
				"aarch64-apple-darwin"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "build cross(release): aarch64-unknown-linux-gnu",
			"type": "shell",
			"command": "cargo",
			"args": [
				"zigbuild",
				"--release",
				"--target",
				"aarch64-unknown-linux-gnu"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "build native(release): docker runtime native",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--release"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$rustc"
			]
		}
	]
}